rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção 'characters'
    match /characters/{characterId} {
      // Permite a leitura de um personagem se o 'userId' do documento
      // for igual ao 'uid' do usuário autenticado.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Permite a criação de um personagem se o usuário estiver autenticado
      // e o 'userId' do novo documento for igual ao 'uid' do usuário.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Bloqueia atualizações e exclusões por enquanto, para segurança.
      allow update, delete: if false;
    }
  }
}
